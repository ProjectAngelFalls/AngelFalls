<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignIn"
    android:background="@drawable/home_gradient">
<!--    Login-->
    <EditText
        android:layout_margin="10dp"
        android:id="@+id/emailETXT1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e-mail id" />
    <EditText
        android:layout_margin="10dp"
        android:id="@+id/pswdETXT1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="pswd"/>
    <Button
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:id="@+id/loginBTN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sign in"/>
<!--    signup-->
    <EditText
        android:id="@+id/nameETEXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/emailETXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="10dp"/>
    <EditText
        android:id="@+id/pswdETXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/loginBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_gravity="center"/>
<!--    change Buttons-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeSignUp"
        android:text="New User, sign up now!!"
        android:visibility="visible"
        android:layout_margin="10dp"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeSignIn"
        android:text="Already have an account, Sign in"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>


</LinearLayout>