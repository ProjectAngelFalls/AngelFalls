<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/home_gradient">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"/>


            <androidx.cardview.widget.CardView
            android:layout_marginTop="600dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carouselView"
                android:id="@+id/SafeAndSanitisedCarsHeading"
                android:text="Safe and sanitised cars"
                android:textSize="25dp"
                android:textColor="@color/teal_700"
                android:layout_margin = "10dp"/>
            <com.synnapps.carouselview.CarouselView
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/carouselView"
                    app:fillColor="@color/black"
                    app:pageColor="@color/white"
                    app:radius="0dp"
                    app:slideInterval="4000"
                    app:strokeColor="#FF777777"
                    app:strokeWidth="1dp"
                    app:autoPlay="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/CarSubscriptionHeading"
                android:text="Car Subscriptions"
                android:textSize="25dp"
                android:textColor="@color/teal_700"
                android:layout_margin = "10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCarSubscription"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPractice"
                android:text="Practice"
                android:textSize="25dp"
                android:textColor="@color/teal_700"
                android:layout_margin = "10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPractice"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"/>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
</FrameLayout>
    </ScrollView>
</layout>